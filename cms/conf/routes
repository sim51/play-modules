# This file defines all module routes (Higher priority routes first)
#
# import these routes in the main app as :
# *     /                       module:cms
#
# ~~~~

# Admin
GET      /admin/cms                                                       cms.Admin.index
GET      /admin/cms/new                                                   cms.Admin.addPage
POST     /admin/cms/upload                                                cms.Admin.upload
GET		 /admin/cms/imagelist.js                                          cms.Admin.imagelist
POST     /admin/cms/page                                                  cms.Admin.savePage
POST     /admin/cms/ajax/{name}                                           cms.Admin.ajaxSaveBody
GET      /admin/cms/page                                                  cms.Admin.savePage
GET      /admin/cms/delete/{id}                                           cms.Admin.delete
GET      /admin/cms/publish/{id}                                          cms.Admin.publish
GET      /admin/cms/unpublish/{id}                                        cms.Admin.unpublish
*        /public/Filemanager/connectors/play/filemanager.play             cms.Admin.filemanager
GET      /admin/cms/{pageName}                                            cms.Admin.editPage

#Frontend
GET     /image/{name}                                                     cms.Frontend.image
GET     /image                                                            cms.Frontend.image
GET     /rss/{template}                                                   cms.Frontend.rss
GET     /{pageName}                                                       cms.Frontend.show

